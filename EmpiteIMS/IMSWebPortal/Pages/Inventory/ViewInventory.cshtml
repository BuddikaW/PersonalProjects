@page
@model IMSWebPortal.Pages.Inventory.ViewInventoryModel
@{
    ViewData["Title"] = "Item Details";
}

<h4>@ViewData["Title"]</h4>
<partial name="./Shared/_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-12">

        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
        {
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-primary right addbtn" asp-page="NewItem">Add New Item</a>
                </div>
            </div>
        }

        <form id="profile-form" method="post">

            <dv>
                <input type="hidden" id="deleteId"/>
                <table id="ItemListTable" class="oktable">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(e => Model.ItemDetils.FirstOrDefault().Name)</th>
                            <th>@Html.DisplayNameFor(e => Model.ItemDetils.FirstOrDefault().Sku)</th>
                            <th>@Html.DisplayNameFor(e => Model.ItemDetils.FirstOrDefault().Price)</th>
                            <th>@Html.DisplayNameFor(e => Model.ItemDetils.FirstOrDefault().Qty)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var itemRecord in Model.ItemDetils)
                        {
                            <tr>
                                <td>@Html.DisplayFor(e => itemRecord.Name)</td>
                                <td>@Html.DisplayFor(e => itemRecord.Sku)</td>
                                <td>@Html.DisplayFor(e => itemRecord.Price)</td>
                                <td>@Html.DisplayFor(e => itemRecord.Qty)</td>
                                <td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                    {
                                        <a asp-page="./EditItem" asp-route-id="@itemRecord.Id">Edit</a>
                                        <span> | </span>
                                        <a class="linkfeel" data-toggle="modal" data-target="#exampleModal" onclick="SelectDeleteItem(@itemRecord.Id)">Delete</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dv>

        </form>
    </div>

    <!-- Modal -->
    <div class="modal fade bd-example-modal-sm" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    Are you sure you want to delete this item?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal" onclick="DeleteItem()">Yes</button>
                </div>
            </div>

        </div>
    </div>


</div>

@section Scripts {

    <script>
        function SelectDeleteItem(id) {
            document.getElementById("deleteId").value = id;
        }

        function DeleteItem() {
            var itemId = document.getElementById("deleteId").value;
            if (itemId != "") {
                $.ajax({
                    type: 'GET',
                    url: '?handler=Delete',
                    data: { id: itemId },
                    dataType: 'json',
                    success: function (data) {
                        if (data == true) {
                            location.reload();
                        } else {
                            alert("Action failed due to some reason");
                        }
                    },
                    error: function (error) {
                        alert("Action failed due to some reason");
                    }
                })
            }
        }
    </script>

}
